<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wardrobe.www.SelfTalkingActivity">

    <include
        android:id="@+id/self_talking_toolbar"
        layout="@layout/toolbar_unfold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="4%"
        />

    <!--<im.delight.android.webview.AdvancedWebView-->
    <!--android:id="@+id/webView"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_self_talking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/self_talking_toolbar"
        app:layout_heightPercent="75%"
        app:layout_widthPercent="92%"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        app:layout_heightPercent="5%"
        android:gravity="center"
        android:text="@string/copyright"
        app:layout_marginBottomPercent="3%"
        android:textColor="@color/gray_1" />

</android.support.percent.PercentRelativeLayout>
